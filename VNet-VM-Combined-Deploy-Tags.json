{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2021-03-01",
      "name": "MyDello-VNet-1",
      "location": "westeurope",
      "properties": {
        "addressSpace": {
          "addressPrefixes": ["10.1.0.0/16"]
        },
        "subnets": [
          {
            "name": "Subnet1",
            "properties": {
              "addressPrefix": "10.1.1.0/24"
            }
          },
          {
            "name": "Subnet2",
            "properties": {
              "addressPrefix": "10.1.2.0/24"
            }
          }
        ]
      },
      "tags": {
        "ENV": "Production",
        "Owner": "IT Team",
        "Department": "Marketing",
        "Backup Policy": "High"
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2021-03-01",
      "name": "MyDello-NSG-Subnet",
      "location": "westeurope",
      "properties": {
        "securityRules": [
          {
            "name": "Allow-HTTP",
            "properties": {
              "priority": 100,
              "direction": "Inbound",
              "access": "Allow",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "80",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*"
            }
          },
          {
            "name": "Allow-SSH",
            "properties": {
              "priority": 110,
              "direction": "Inbound",
              "access": "Allow",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*"
            }
          }
        ]
      },
      "tags": {
        "ENV": "Production",
        "Owner": "IT Team",
        "Department": "Marketing",
        "Backup Policy": "High"
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2021-03-01",
      "name": "MyDello-PublicIP-Web-1",
      "location": "westeurope",
      "properties": {
        "publicIPAllocationMethod": "Static"
      },
      "tags": {
        "ENV": "Production",
        "Owner": "IT Team",
        "Department": "Marketing",
        "Backup Policy": "High"
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2021-03-01",
      "name": "MyDello-PublicIP-Web-2",
      "location": "westeurope",
      "properties": {
        "publicIPAllocationMethod": "Static"
      },
      "tags": {
        "ENV": "Production",
        "Owner": "IT Team",
        "Department": "Marketing",
        "Backup Policy": "High"
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2021-03-01",
      "name": "MyDello-NIC-Web-1",
      "location": "westeurope",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', 'MyDello-NSG-Subnet')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'MyDello-VNet-1', 'Subnet1')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'MyDello-PublicIP-Web-1')]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'MyDello-NSG-Subnet')]"
        }
      },
      "tags": {
        "ENV": "Production",
        "Owner": "IT Team",
        "Department": "Marketing",
        "Backup Policy": "High"
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2021-03-01",
      "name": "MyDello-NIC-Web-2",
      "location": "westeurope",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', 'MyDello-NSG-Subnet')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'MyDello-VNet-1', 'Subnet1')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'MyDello-PublicIP-Web-2')]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'MyDello-NSG-Subnet')]"
        }
      },
      "tags": {
        "ENV": "Production",
        "Owner": "IT Team",
        "Department": "Marketing",
        "Backup Policy": "High"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2021-03-01",
      "name": "MyDello-VM-Web-1",
      "location": "westeurope",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', 'MyDello-NIC-Web-1')]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_B1s"
        },
        "osProfile": {
          "computerName": "MyDello-VM-Web-1",
          "adminUsername": "dello-admin",
          "adminPassword": "Dello12345678!"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', 'MyDello-NIC-Web-1')]"
            }
          ]
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "ubuntu-24_04-lts",
            "sku": "server",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            }
          }
        }
      },
      "tags": {
        "ENV": "Production",
        "Owner": "IT Team",
        "Department": "Marketing",
        "Backup Policy": "High"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2021-03-01",
      "name": "MyDello-VM-Web-2",
      "location": "westeurope",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', 'MyDello-NIC-Web-2')]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_B1s"
        },
        "osProfile": {
          "computerName": "MyDello-VM-Web-2",
          "adminUsername": "dello-admin",
          "adminPassword": "Dello12345678!"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', 'MyDello-NIC-Web-2')]"
            }
          ]
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "ubuntu-24_04-lts",
            "sku": "server",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            }
          }
        }
      },
      "tags": {
        "ENV": "Production",
        "Owner": "IT Team",
        "Department": "Marketing",
        "Backup Policy": "High"
      }
    }
  ]
}
